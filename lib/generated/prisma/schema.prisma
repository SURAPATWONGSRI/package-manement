generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  title   String
  content String

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  deletedAt DateTime?
  isDeleted Boolean   @default(false)

  @@map("posts")
}

model User {
  id            String   @id
  createdAt     DateTime
  updatedAt     DateTime
  name          String
  email         String
  lineId        String?  @unique
  emailVerified Boolean
  image         String?

  sessions Session[]
  accounts Account[]
  posts    Post[]

  deletedAt DateTime?
  isDeleted Boolean   @default(false)

  @@unique([email])
  @@map("users")
}

model Session {
  id        String   @id
  createdAt DateTime
  updatedAt DateTime
  expiresAt DateTime
  token     String   @unique
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  deletedAt DateTime?
  isDeleted Boolean   @default(false)

  @@map("sessions")
}

model Account {
  id                    String    @id
  createdAt             DateTime
  updatedAt             DateTime
  accountId             String
  providerId            String
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  deletedAt DateTime?
  isDeleted Boolean   @default(false)

  @@map("accounts")
}

model Verification {
  id         String    @id
  createdAt  DateTime?
  updatedAt  DateTime?
  identifier String
  value      String
  expiresAt  DateTime

  deletedAt DateTime?
  isDeleted Boolean   @default(false)

  @@map("verifications")
}
